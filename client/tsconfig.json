{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
    // "baseUrl": "src" // esto se usa para acortar la forma de importar archivos.
  },
  "include": [
    "src"
    // "**/*.ts",  // de esta forma damos a entender que extenciones queremos que se importen de forma directa.
    // "**/*.tsx"  // de esta forma damos a entender que extenciones queremos que se importen de forma directa.
  ]
}
